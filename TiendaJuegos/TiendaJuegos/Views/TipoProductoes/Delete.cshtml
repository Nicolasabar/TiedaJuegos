@model TiendaJuegos.Models.TipoProducto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Luego de ser eliminado no podra recuperarse. ¿Eliminar?</h3>
<div>
    <h4>TipoProducto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
